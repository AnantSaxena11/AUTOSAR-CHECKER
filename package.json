{
  "name": "autosar-checker",
  "displayName": "AUTOSAR Checker",
  "description": "Real-time AUTOSAR compliance checker for C/C++ code",
  "version": "0.0.6",
  "publisher": "AnantSaxena",
  "repository": {
    "type": "git",
    "url": "https://github.com/autosar-dev/autosar-checker"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autosarCheckerContainer",
          "title": "AUTOSAR Checker",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "autosarCheckerContainer": [
        {
          "id": "autosarViolations",
          "name": "Violations",
          "icon": "$(warning)",
          "contextualTitle": "AUTOSAR Violations"
        }
      ]
    },
    "commands": [
      {
        "command": "autosar-checker.checkCurrentFile",
        "title": "AUTOSAR: Check Current File",
        "icon": "$(play)"
      },
      {
        "command": "autosar-checker.togglePause",
        "title": "AUTOSAR: Pause/Resume Checker",
        "icon": "$(debug-pause)"
      },
      {
        "command": "autosar-checker.rerunCheck",
        "title": "AUTOSAR: Rerun Check",
        "icon": "$(refresh)"
      },
      {
        "command": "autosar-checker.clearViolations",
        "title": "AUTOSAR: Clear All Violations",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "autosar-checker.rerunCheck",
          "when": "view == autosarViolations",
          "group": "navigation@1"
        },
        {
          "command": "autosar-checker.togglePause",
          "when": "view == autosarViolations",
          "group": "navigation@2"
        },
        {
          "command": "autosar-checker.clearViolations",
          "when": "view == autosarViolations",
          "group": "navigation@3"
        }
      ]
    },
    "languages": [
      {
        "id": "cpp",
        "extensions": [".cpp", ".cc", ".cxx", ".hpp", ".h", ".hxx"]
      },
      {
        "id": "c",
        "extensions": [".c", ".h"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
